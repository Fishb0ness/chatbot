# OpenAI API Key - Required for the chatbot to work
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration - Port where the server will run
PORT=3000

# Security Options - Set to 'production' when deploying to production environments
NODE_ENV=development

# Chatbot Personality - Sets the voice for the AI (Professional, Creative, or Friendly)
BRAND_VOICE=Professional

# Database Configuration - Optional, configure for persistent chat storage
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=chatbot_db

# Session Management - For secure user sessions
SESSION_SECRET=your_session_secret_here

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting - To prevent abuse
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
